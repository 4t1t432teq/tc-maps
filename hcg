-- RETRO-STYLE GUI LOADER WITH 18 POPULAR LOADSTRING BUTTONS
-- FOR CLIENT-SIDE EXECUTION (E.G. EXECUTOR OR LOCALSCRIPT)

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer

-- Remove old GUI
local old = player:FindFirstChild("PlayerGui"):FindFirstChild("RetroCRTGui")
if old then old:Destroy() end

-- Create GUI
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "RetroCRTGui"
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false

-- Boot Screen
local boot = Instance.new("Frame", gui)
boot.Size = UDim2.new(1, 0, 1, 0)
boot.BackgroundColor3 = Color3.new(0, 0, 0)

local label = Instance.new("TextLabel", boot)
label.Size = UDim2.new(1, 0, 1, 0)
label.TextColor3 = Color3.fromRGB(0, 255, 0)
label.Font = Enum.Font.Code
label.TextSize = 24
label.BackgroundTransparency = 1
label.Text = ""

local function typeText(text)
    for i = 1, #text do
        label.Text = string.sub(text, 1, i)
        task.wait(0.05)
    end
end

local function flicker()
    for i = 1, 5 do
        boot.BackgroundColor3 = Color3.new(0, 255, 0)
        task.wait(0.05)
        boot.BackgroundColor3 = Color3.new(0, 0, 0)
        task.wait(0.05)
    end
end

-- Boot sequence
typeText("INITIALIZING SYSTEM...\nLOADING BIOS...\nEXECUTING PAYLOAD...")
flicker()
TweenService:Create(label, TweenInfo.new(1), {TextTransparency = 1}):Play()
TweenService:Create(boot, TweenInfo.new(1), {BackgroundTransparency = 1}):Play()
task.wait(1)
boot:Destroy()

-- Main Frame
local frame = Instance.new("Frame", gui)
frame.Position = UDim2.new(0.25, 0, 0.15, 0)
frame.Size = UDim2.new(0.5, 0, 0.7, 0)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BorderSizePixel = 4
frame.BorderColor3 = Color3.fromRGB(0, 255, 0)

-- Title Bar
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0.1, 0)
title.Text = "== RETRO SCRIPT HUB =="
title.TextColor3 = Color3.fromRGB(0, 255, 0)
title.Font = Enum.Font.Arcade
title.TextScaled = true
title.BackgroundTransparency = 1

-- Scrolling Buttons
local scroll = Instance.new("ScrollingFrame", frame)
scroll.Size = UDim2.new(1, 0, 0.9, 0)
scroll.Position = UDim2.new(0, 0, 0.1, 0)
scroll.CanvasSize = UDim2.new(0, 0, 3, 0)
scroll.ScrollBarThickness = 8
scroll.BackgroundTransparency = 1

local layout = Instance.new("UIGridLayout", scroll)
layout.CellSize = UDim2.new(0.48, 0, 0.15, 0)
layout.CellPadding = UDim2.new(0.02, 0, 0.02, 0)

-- Scripts list
local scripts = {
    IY = "https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source",
    DEX = "https://raw.githubusercontent.com/infy-sys/Dex/master/source.lua",
    RSPY = "https://raw.githubusercontent.com/exxtremestuffs/SimpleSpySource/master/SimpleSpy.lua",
    CMDX = "https://raw.githubusercontent.com/CMD-X/CMD-X/master/Source",
    FATES = "https://raw.githubusercontent.com/fatesc/fates-admin/main/main.lua",
    NAMELESS = "https://raw.githubusercontent.com/FilteringEnabled/NamelessAdmin/main/Source",
    DARKDEX = "https://raw.githubusercontent.com/peyton2465/DarkDex/master/Loader.lua",
    RSPY2 = "https://raw.githubusercontent.com/Upbolt/RemoteSpy/main/Main.lua",
    HYDROX = "https://raw.githubusercontent.com/Hydroxide/hydroxide/master/init.lua",
    OWL = "https://raw.githubusercontent.com/CriShoux/OwlHub/master/OwlHub.txt",
    VAPE = "https://raw.githubusercontent.com/7GrandDadPGN/VapeV4ForRoblox/main/NewMainScript.lua",
    PEVO = "https://raw.githubusercontent.com/Project-Evolution/PE-V2/main/PELoader.lua",
    UFEHUB = "https://raw.githubusercontent.com/UniversalFEHub/UniversalFEHub/main/Loader.lua",
    ECLIPSE = "https://raw.githubusercontent.com/EclipseHub/EclipseHub/main/Loader.lua",
    TRIGON = "https://raw.githubusercontent.com/TrigonScripts/TrigonHub/main/Loader.lua",
    FLUXUS = "https://fluxteam.net/scripts/fluxus.lua",
    HOHOHUB = "https://hohohubv2.com/Script",
    ZENTIHUB = "https://raw.githubusercontent.com/ZenithHub/Zenith/main/Loader.lua"
}

-- Create buttons
for name, url in pairs(scripts) do
    local b = Instance.new("TextButton", scroll)
    b.Text = name
    b.Font = Enum.Font.Arcade
    b.TextScaled = true
    b.TextColor3 = Color3.fromRGB(0, 255, 0)
    b.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    b.BorderColor3 = Color3.fromRGB(0, 255, 0)
    b.BorderSizePixel = 2
    b.MouseEnter:Connect(function() b.TextColor3 = Color3.fromRGB(255, 255, 255) end)
    b.MouseLeave:Connect(function() b.TextColor3 = Color3.fromRGB(0, 255, 0) end)
    b.MouseButton1Click:Connect(function()
        local success, err = pcall(function()
            loadstring(game:HttpGet(url))()
        end)
        if not success then
            warn("Failed to load " .. name .. ": " .. tostring(err))
        end
    end)
end

-- Make frame draggable
frame.Active = true
local dragging = false
local dragStart, startPos

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement and dragging then
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X,
                                   startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)